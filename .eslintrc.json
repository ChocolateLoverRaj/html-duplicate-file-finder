{
  "root": true,
  "extends": "standard-with-typescript",
  "ignorePatterns": "next-env.d.ts",
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "no-multiple-empty-lines": [
      "error",
      {
        "maxBOF": 0,
        "max": 1
      }
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error"
  },
  "parserOptions": {
    "project": "./tsconfig.json"
  }
}